set real_name         = "Amir Habirov"
set from              = "aambdahambda@ya.ru"
set editor            = "vim"
set tmpdir            = "/tmp"
set folder            = "$HOME/.mail"
set nm_default_uri    = "notmuch://$HOME/.mail"
set alias_file        = "~/.config/neomutt/aliases" 
set virtual_spoolfile = yes
set quit              = yes
set markers           = no

virtual-mailboxes \
	"INBOX"   "notmuch://?query=tag:inbox" \
	"Drafts"	"notmuch://?query=tag:drafts" \
	"Archive" "notmuch://?query=tag:archive"

bind pager       k   previous-line
bind pager       j   next-line
bind pager       h   previous-page   
bind pager       l   next-page      

bind index,pager \Cn next-entry
bind index,pager \Cp previous-entry

color normal     black brightwhite
color body       black brightwhite ".*"
color tilde      black brightwhite 
color hdrdefault black brightwhite 
color header     black brightwhite ".*"
color index      black brightwhite ".*"
color quoted     black brightwhite
color quoted     black brightwhite 

color attachment black white
color indicator  black white 

color status     brightwhite black 
